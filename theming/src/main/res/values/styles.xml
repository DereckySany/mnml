<resources>

  <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary_lightTheme</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark_lightTheme</item>
    <item name="colorAccent">@color/colorAccent</item>

    <item name="toolbarTitleColor">#000</item>
    <item name="cardBackground">@color/card_background_lightTheme</item>
    <item name="android:windowBackground">@color/window_background_lightTheme</item>

    <item name="android:windowLightStatusBar">true</item>
    <item name="android:statusBarColor">@color/colorPrimary_lightTheme</item>
  </style>

  <style name="AppTheme.Transparent" parent="@style/AppTheme">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:windowBackground">@android:color/transparent</item>
  </style>

  <style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary_darkTheme</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark_darkTheme</item>
    <item name="colorAccent">@color/colorAccent</item>

    <item name="toolbarTitleColor">#FFF</item>
    <item name="cardBackground">@color/card_background_darkTheme</item>
    <item name="android:windowBackground">@color/window_background_darkTheme</item>

    <item name="android:windowLightStatusBar">false</item>
    <item name="android:statusBarColor">@color/colorPrimary_darkTheme</item>
  </style>

</resources>
